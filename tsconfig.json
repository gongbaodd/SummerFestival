{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es6"
    ],
    // "outDir": "./dist"
    "rootDir": "src"
  },
  "exclude": [ //dont include the tutorial files in the build, they're just there for references in documentation
    "tutorial"
  ]
}